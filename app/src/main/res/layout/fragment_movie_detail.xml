<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.learningandroid.rajesh.moviesapp1.fragment.MovieDetailActivityFragment">

    <TextView
        android:id="@+id/movie_name_heading"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/accent_material_dark"
        android:gravity="center_vertical"
        android:text="@string/hello_world"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/movie_detail_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movie_name_heading"
        android:contentDescription="@string/movie_poster"
        android:src="@drawable/movie_trailer" />

    <TextView
        android:id="@+id/movie_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_name_heading"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/movie_detail_image"
        android:text="@string/dummy_movie_release_date"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/movie_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_release_date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/movie_detail_image"
        android:text="@string/dummy_movie_duration"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_duration"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/movie_detail_image"
        android:text="@string/movie_dummy_rating"
        android:textSize="15sp" />

    <Button
        android:id="@+id/movie_button_favorite"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_rating"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/movie_detail_image"
        android:text="@string/movie_button_label" />

    <TextView
        android:id="@+id/movie_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_detail_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:text="@string/dummy_movie_description"
        android:textSize="15sp" />

</RelativeLayout>
